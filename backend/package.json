{
  "name": "digital-tracking-backend",
  "version": "1.0.0",
  "description": "Backend API for Digital Tracking Merchandising Platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "format": "prettier --write src/**/*.{js,ts,json}",
    "type-check": "tsc --noEmit",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js -o swagger.json",
    "docs:serve": "swagger-ui-serve swagger.json"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "dotenv": "^16.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.9.0",
    "redis": "^4.6.4",
    "socket.io": "^4.6.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.31.3",
    "nodemailer": "^6.9.1",
    "cron": "^2.3.0",
    "joi": "^17.9.1",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.3",
    "compression": "^1.7.4",
    "express-winston": "^4.2.0",
    "winston": "^3.8.2",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "axios": "^1.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "jest": "^29.4.3",
    "supertest": "^6.3.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.8.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "@types/node": "^18.15.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/pg": "^8.6.6",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.8",
    "@types/uuid": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "workforce-management",
    "api",
    "nodejs",
    "express",
    "postgresql",
    "microservices"
  ],
  "author": "Digital Tracking Team",
  "license": "MIT"
}
